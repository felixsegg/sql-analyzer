<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox spacing="10.0">
            <BorderPane.margin>
                <Insets bottom="10.0"/>
            </BorderPane.margin>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label fx:id="headerLabel" style="-fx-font-size: 18;"/>
                <Label fx:id="helpControl" alignment="CENTER" minWidth="15.0" style="-fx-background-color: lightblue;" text="?" />
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lastEditedLabel"/>
                <Button fx:id="refreshBtn" text="Refresh"/>
            </HBox>
            <Separator prefWidth="200.0"/>
        </VBox>
    </top>
    <center>
    </center>
    <bottom>
        <VBox>
            <HBox alignment="TOP_RIGHT" spacing="10.0">
                <Button fx:id="deleteBtn" text="Delete"/>
                <Button fx:id="saveBtn" text="Save"/>
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </HBox>
        </VBox>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>

